{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2017",
    "allowJs": true,
    "strictNullChecks": true,
    "experimentalDecorators": true, // For sequelize-typescript
    "emitDecoratorMetadata": true, // For sequelize-typescript
    "typeRoots": ["src/types/**/*.d.ts"],
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
